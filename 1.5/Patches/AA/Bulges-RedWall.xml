<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationConditional">
    <xpath>Defs/AlienRace.ThingDef_AlienRace[defName="RWLBadger" or defName="RWFBadger"]/alienRace</xpath>
	  <match Class="PatchOperationAdd">
		<xpath>Defs/AlienRace.ThingDef_AlienRace[starts-with(.,'RWL') or starts-with(.,'RWF')]/alienRace/generalSettings/alienPartGenerator</xpath>
		<value>
			<bodyAddons>
				<li>
					<name>Belly</name>
					<userCustomizable>false</userCustomizable>
					<allowColorOverride>false</allowColorOverride>
					<path>Belly/Empty</path>
					<inFrontOfBody>true</inFrontOfBody>
					<colorChannel>skin</colorChannel>
					<scaleWithPawnDrawsize>true</scaleWithPawnDrawsize>
					<conditions>
						<Posture>
							<drawnInBed>false</drawnInBed>
						</Posture>
						<RotStage>Fresh</RotStage>
					</conditions>
					<extendedGraphics>
						<Hediff For="RV2B_BellyBulge">
							<path>Belly/Empty</path>
							<extendedGraphics>
								<Severity For="0.4">
									<BodyType For="Male">Belly/Base/Belly_Male</BodyType>
									<BodyType For="Female">Belly/Base/Belly_Female</BodyType>
									<BodyType For="Thin">Belly/Base/Belly_Thin</BodyType>
									<BodyType For="Hulk">Belly/Base/Belly_Hulk</BodyType>
									<BodyType For="Fat">Belly/Base/Belly_Fat</BodyType>
								</Severity>
							</extendedGraphics>
						</Hediff>
					</extendedGraphics>
				</li>
			</bodyAddons>
		</value>
	 </match>
  </Operation> 
</Patch>